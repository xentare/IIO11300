        xmlns:local="clr-namespace:Tehtävä3"
        mc:Ignorable="d"
        Title="MainWindow" Height="390.046" Width="443.307">
    <Grid>
        <TextBox x:Name="txtBoxFolder" HorizontalAlignment="Left" Height="23" Margin="81,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="344"/>
