        </StatusBar>
        
        <ListBox x:Name="listBoxFiles" SelectionMode="Multiple" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="408" Margin="17,100,0,0"/>

    </Grid>
</Window>
